{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@lowcodeunit/lcu-theme-builder-common": [
				"dist/common/common",
				"dist/common"
			]
		},
	  "outDir": "./dist/out-tsc",
	  "sourceMap": true,
	  "declaration": false,
	  "downlevelIteration": true,
	  "experimentalDecorators": true,
	  "moduleResolution": "node",
	  "importHelpers": true,
	  "target": "es2015",
	  "module": "es2020",
	  "lib": [
		"es2018",
		"dom"
	  ]
	},
	"angularCompilerOptions": {
	  "enableI18nLegacyMessageIdFormat": false,
	  "enableIvy": false
	}
  }