{
	"name": "@lowcodeunit/lcu-theme-builder",
	"version": "0.0.2",
	"scripts": {
		"build:common": "ng build common",
		"build:demo": "ng build demo --configuration production",
		"build:lcu": "ng build lcu --configuration production --single-bundle && npm run pack",
		"demo": "npm run build:common && npm run start:demo",
		"demo:lcu": "npm run build:common && npm run build:lcu && npm run start:demo",
		"deploy": "npm version patch && npm run deploy:all",
		"deploy:all": "npm run deploy:common && npm run deploy:lcu && npm run deploy:demo",
		"deploy:common": "npm version patch --prefix projects/common && npm run build:common && npm publish ./dist/common --access public",
		"deploy:demo": "npm version patch --prefix projects/demo && npm run build:demo && npm publish ./dist/demo --access public",
		"deploy:lcu": "npm version patch --prefix projects/lcu && npm run build:lcu && npm publish ./dist/lcu --access public",
		"ng": "ng",
		"pack": "npm run pack:lcu",
		"pack:join": "concat-glob-cli -f \"dist/lcu/wc/lcu.*.js\" -o dist/lcu/wc/lcu-theme-builder.lcu.js",
		"pack:lcu": "rimraf dist/lcu/wc && mkdirp dist/lcu/wc && npm run pack:main && npm run pack:pollyfills && npm run pack:join",
		"pack:main": "concat-glob-cli -f \"dist/lcu/main-es2015.*.js\" -o dist/lcu/wc/lcu.startup.js",
		"pack:pollyfills": "concat-glob-cli -f \"dist/lcu/scripts.*.js\" -o dist/lcu/wc/lcu.pollyfills.js",
		"start": "ng serve demo --port=4227",
		"build": "npm run build:common && npm run build:lcu",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"serve-it": "npm run copy:sassjs && npm run copy:sassworker && npm run copy:assets && ng serve demo",
		"copy:assets": "cpx \"./node_modules/@angular/material/_theming.scss\" \"./demo/assets/\""
	},
	"private": false,
	"dependencies": {
		"@angular/animations": "~13.1.1",
		"@angular/cdk": "^13.1.1",
		"@angular/common": "~13.1.1",
		"@angular/compiler": "~13.1.1",
		"@angular/core": "~13.1.1",
		"@angular/elements": "^13.1.1",
		"@angular/flex-layout": "^13.0.0-beta.36",
		"@angular/forms": "~13.1.1",
		"@angular/material": "^13.1.1",
		"@angular/platform-browser": "~13.1.1",
		"@angular/platform-browser-dynamic": "~13.1.1",
		"@angular/router": "~13.1.1",
		"@aspnet/signalr": "^1.1.4",
		"@lcu/common": "1.84.755-angular-13",
		"@lowcodeunit-devkit/ng-lcu": "^1.28.161",
		"@types/highlight.js": "^10.1.0",
		"@types/tinycolor2": "^1.4.2",
		"@webcomponents/custom-elements": "^1.4.3",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"copy": "^0.0.1",
		"hammerjs": "^2.0.8",
		"highlight.js": "^10.7.2",
		"ngx-build-plus": "^12.2.0",
		"ngx-color-picker": "^11.0.0",
		"rxjs": "^7.2.0",
		"sass.js": "^0.11.1",
		"terser": "^5.7.1",
		"tinycolor2": "^1.4.2",
		"tslib": "^2.3.0",
		"undefined": "^0.1.0",
		"zone.js": "~0.11.4"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~13.1.2",
		"@angular/cli": "~13.1.2",
		"@angular/compiler-cli": "~13.1.1",
		"@types/jasmine": "~3.10.3",
		"@types/node": "^17.0.8",
		"@types/tinycolor2": "^1.4.3",
		"concat-glob-cli": "^0.1.0",
		"jasmine-core": "~4.0.0",
		"jasmine-spec-reporter": "~7.0.0",
		"karma": "~6.3.4",
		"karma-chrome-launcher": "~3.1.0",
		"karma-coverage": "~2.1.0",
		"karma-jasmine": "~4.0.1",
		"karma-jasmine-html-reporter": "^1.7.0",
		"ng-packagr": "^13.1.2",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"protractor": "~7.0.0",
		"rimraf": "^3.0.2",
		"ts-node": "~10.4.0",
		"tslint": "~6.1.3",
		"typescript": "~4.5.4",
		"wait-on": "^6.0.0"
	}
}
